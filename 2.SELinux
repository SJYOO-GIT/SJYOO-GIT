---
- name: Change SELinux mode with permissive
  hosts: {{ RUNSVR }}
  
  tasks:
    - name: Check SELinux mode
      register: sestatus_result
      command: sestatus | grep SELinux | awk '{print $3}'

    - name: Change SElinux mode
      command: sed -i 'e/SELINUX=disabled/SELINUX=permissive/g' /etc/selinux/config
      when:
        sestatus_result == "disabled"